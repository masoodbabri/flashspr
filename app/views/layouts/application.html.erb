<!DOCTYPE html>
<html>
  <head>
    <title>FlashSPR</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

  </head>


<% if user_signed_in? %>

   <body class="loggedin">
 <% else %>
    <body class="home">
 <% end %>

    <header>

      <nav id="mainnav" class="navbar navbar-default ">
        <div class="container">

            <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <ul class="nav logo"><a href="/"></a><li></li> </ul>
    </div>
        
         <div class="collapse navbar-collapse" >

   

          <ul class="nav navbar-nav"> 
            <li><a href="/" > <span class="glyphicon glyphicon-home"></span>Home</a></li>

            <li>
              <%=
                link_to_if($curUserStaff.nil?, 'Home', root_path) do
              %>
                  <%= link_to edit_staff_path($curUserStaff) do %>
                    <span  class="glyphicon glyphicon-user"></span>Update Profile
                  <% end %>
              <% end %>
            </li>
            <li><%= link_to staffs_path do %>
                  <span class="glyphicon glyphicon-star"></span>Send/View Kudos
                <% end %>
            </li>
            <li><a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="glyphicon glyphicon-th-list"></span> Admin <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
           
                         <h4> Admin Links</h4>
       <%= link_to "New Staff", new_staff_path, class: "btn btn-primary btn-sm" %>
       <%= link_to "Edit/Remove Staff", staffs_path, class: "btn btn-primary btn-sm" %>
                  
                </ul>
            </li>
            <li><%= link_to destroy_user_session_path, method: :delete do %>
                  <span class="glyphicon glyphicon-star"></span>Logut
              <% end %>
            </li>

          </ul>

  
          </div>
        </div>
      </nav>

    </header>
    <div class="container">
    <% if notice.present? %>
        <aside class="alert alert-info">
          <%= notice %>
        </aside>
    <% end %>
    <% if alert.present? %>
        <aside class="alert alert-danger">
          <%= alert %>
        </aside>
    <% end %>

    <%= yield %>
    </div>
    <footer class="">
    <div class="container">
      <p>FlashSPR Â© 2016.</p>
      </div>
    </footer>
  </body>
</html>
